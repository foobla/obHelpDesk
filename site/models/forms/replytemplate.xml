		<field
				name="content"
				type="editor"
				label="COM_OBHELPDESK_CONTENT"
				description="COM_OBHELPDESK_SUBJECT_DESC"
				required="true"
				class="obhelpdesk-content"
				buttons="false"
				editor="alternative"
				filter="safehtml"
				/>

		<field name="enable" type="list"
			   label="JSTATUS" description=""
			   default="1">
			<option value="1">COM_OBHELPDESK_ENABLED</option>
			<option value="0">COM_OBHELPDESK_DISABLED</option>
		</field>
	</fieldset>
